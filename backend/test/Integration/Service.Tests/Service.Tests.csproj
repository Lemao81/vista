    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>Nullable</WarningsAsErrors>
    <AssemblyName>Integration.Service.Tests</AssemblyName>
    <IsPackable>false</IsPackable>
