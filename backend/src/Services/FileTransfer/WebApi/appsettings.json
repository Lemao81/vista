{
  "Serilog": {
    "WriteTo": [
      {
        "Name": "OpenTelemetry",
        "Args": {
          "Endpoint": "http://aspire-dashboard:18889",
          "Protocol": "Grpc",
          "ResourceAttributes": {
            "service.name": "FileTransfer"
          }
        }
      }
    ]
  },
  "Media": {
    "Upload": {
      "ValidImageContentTypes": ["image/png", "image/jpeg"],
      "ValidImageFileExtensions": ["jpg", "jpeg", "png"],
      "MaxImageFileLengthKb": 4096
    }
  },
  "OTEL_SERVICE_NAME": "FileTransfer"
}
