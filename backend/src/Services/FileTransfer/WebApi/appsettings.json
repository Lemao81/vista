{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      }, {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }, {
        "Name": "OpenTelemetry",
        "Args": {
          "Endpoint": "http://aspire-dashboard:18889",
          "Protocol": "Grpc",
          "ResourceAttributes": {
            "service.name": "FileTransfer"
          }
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://aspire-dashboard:18889",
  "OTEL_SERVICE_NAME": "FileTransfer",
  "Media": {
    "Upload": {
      "ValidImageContentTypes": ["image/png", "image/jpeg"],
      "ValidImageFileExtensions": ["jpg", "jpeg", "png"],
      "MaxImageFileLengthKb": 4096
    }
  }
}
